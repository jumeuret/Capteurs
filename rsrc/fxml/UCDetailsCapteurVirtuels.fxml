<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.GridPane?>
<fx:root type="HBox" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" prefHeight="200.0" prefWidth="500.0">
    <GridPane BorderPane.alignment="CENTER">
        <Label text="Capteurs observés :" BorderPane.alignment="CENTER" />
        <Button mnemonicParsing="false" text="Ajouter nouveau capteur observé" BorderPane.alignment="CENTER" />
        <TableView fx:id="tableau" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="poids" minWidth="-1.0" prefWidth="217.0" text="Poids" />
                <TableColumn fx:id="type" prefWidth="195.0" text="Type" />
                <TableColumn fx:id="id" prefWidth="187.0" text="Id" />
            </columns>
        </TableView>
    </GridPane>
</fx:root>

